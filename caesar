#include <stdio.h>
#include <cs50.h>
#include <ctype.h>
#include <stdlib.h>
#include <string.h>

int main(int argc, string argv[])
{
   if (argc != 2)
   {
      printf("Try again \n");
      exit(1);
   }
   else
   {
    string secret = GetString();
    int e = atoi(argv[1]); 
    int key = e;
  
   for (int i = 0, n = strlen(secret); i < n; i++)
{
    if (secret[i] >= 'a' && secret[i] <= 'z')
    {
    printf("%c", secret[i] + key);
    }
   else 
   if (secret[i] >= 'A' && secret[i] <= 'Z')
    {
    printf("%c", secret[i] + key);
    }
}
printf("\n");
return 0;
}
}
